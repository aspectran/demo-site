<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran Configuration 5.0//EN"
                           "http://aspectran.github.io/dtd/aspectran-5.dtd">

<aspectran>

    <description>
        A collection of Translets for the main page.
    </description>

    <translet name="/">
        <dispatch name="template1">
            <echo id="page">
                <attributes>
                    <item name="headline">Welcome to Aspectran Demo Site</item>
                    <item name="teaser">This site is a collection of reference applications created to show how to develop Aspectran applications following the recommended best practices.</item>
                    <item name="include">front/main</item>
                </attributes>
            </echo>
        </dispatch>
    </translet>

</aspectran>