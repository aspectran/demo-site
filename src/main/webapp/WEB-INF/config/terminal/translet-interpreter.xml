<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran Configuration 5.0//EN"
                           "http://aspectran.github.io/dtd/aspectran-5.dtd">

<aspectran>

    <description>
        You can run the Translet with a command line interpreter implemented using the jQuery Terminal Emulator.
    </description>

    <settings>
        <setting name="transletNamePattern" value="/terminal/*"/>
    </settings>

    <bean id="transletInterpreter" class="com.aspectran.demo.terminal.TransletInterpreter"/>

    <translet name="/">
        <dispatch name="templates/default">
            <echo id="page">
                <attributes>
                    <item name="headline">Translet Interpreter</item>
                    <item name="teaser">You can run the Translet with a command line interpreter implemented using the jQuery Terminal Emulator.</item>
                    <item name="include">terminal/translet-interpreter</item>
                </attributes>
            </echo>
        </dispatch>
    </translet>

    <translet name="/hello">
        <request>
            <parameters>
                <item name="id" mandatory="true"/>
                <item name="password" mandatory="true" security="true"/>
            </parameters>
        </request>
        <transform type="transform/text">
            <template style="apon">
                |----------------------------------------------------------
                |The parameters you entered are:
                |   id: ${id}
                |   password: ${password}
                |----------------------------------------------------------
            </template>
        </transform>
    </translet>

</aspectran>