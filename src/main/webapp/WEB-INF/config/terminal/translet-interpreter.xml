<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran Configuration 6.0//EN"
        "http://aspectran.github.io/dtd/aspectran-6.dtd">
<aspectran>

    <description>
        You can run translets with a command line interpreter implemented using the jQuery Terminal Emulator.
    </description>

    <settings>
        <setting name="transletNamePattern" value="/terminal/*"/>
    </settings>

    <translet name="/">
        <echo id="page">
            <attributes>
                <item name="headline">Translet Interpreter</item>
                <item name="teaser">You can run translets with a command line interpreter implemented using the jQuery Terminal Emulator.</item>
                <item name="path">terminal/translet-interpreter</item>
            </attributes>
        </echo>
        <dispatch name="templates/default"/>
    </translet>

    <append file="/WEB-INF/config/terminal/terminal-commands.xml"/>

</aspectran>