<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran 9.0//EN"
        "https://aspectran.com/dtd/aspectran-9.dtd">
<aspectran>

    <description>
        A collection of Translets for the main page.
    </description>

    <translet name="/">
        <echo id="page">
            <item name="headline">Welcome to Aspectran Demo Site</item>
            <item name="teaser">
                This site is a collection of reference applications created to show how to develop
                Aspectran applications following the recommended best practices.
            </item>
            <item name="include">home/main</item>
            <item name="style">plate solid</item>
        </echo>
        <dispatch name="templates/default"/>
    </translet>

</aspectran>